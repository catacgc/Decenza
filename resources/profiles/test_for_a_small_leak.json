{
    "title": "Test/for a small leak",
    "author": "Decent",
    "notes": "Put a blind (no hole) portafilter basket into your portafilter, and then run this profile to see if there are any water leaks in your machine. Once pressure is reached, water will be turned off and pressure held. A small amount of pressure loss is normal, because of leaking around the pump's valve. After two minutes of no flow, your pressure should be above 8 bar.",
    "beverage_type": "calibrate",
    "profile_type": "settings_2c",
    "target_weight": 0,
    "target_volume": 0,
    "espresso_temperature": 0.0,
    "temperature_presets": [],
    "maximum_pressure": 0,
    "maximum_flow": 0,
    "minimum_pressure": 0.0,
    "preinfuse_frame_count": 1,
    "mode": "frame_based",
    "steps": [
        {
            "name": "Preinfusion",
            "temperature": 0.0,
            "sensor": "coffee",
            "pump": "pressure",
            "transition": "smooth",
            "pressure": 10.0,
            "flow": 8.0,
            "seconds": 10.0,
            "volume": 500,
            "exit_if": false,
            "exit_type": "pressure_over",
            "exit_pressure_over": 10.0,
            "exit_pressure_under": 0,
            "exit_flow_over": 6,
            "exit_flow_under": 0
        },
        {
            "name": "Rise and Hold",
            "temperature": 0.0,
            "sensor": "coffee",
            "pump": "pressure",
            "transition": "fast",
            "pressure": 10.0,
            "flow": 0.0,
            "seconds": 5.0,
            "volume": 500,
            "exit_if": false,
            "exit_type": "pressure_over",
            "exit_pressure_over": 11,
            "exit_pressure_under": 0,
            "exit_flow_over": 6,
            "exit_flow_under": 0
        },
        {
            "name": "Hold at No Flow",
            "temperature": 0.0,
            "sensor": "coffee",
            "pump": "flow",
            "transition": "fast",
            "pressure": 10.0,
            "flow": 0.0,
            "seconds": 120.0,
            "volume": 500,
            "exit_if": false,
            "exit_type": "pressure_over",
            "exit_pressure_over": 11,
            "exit_pressure_under": 0,
            "exit_flow_over": 6,
            "exit_flow_under": 0
        }
    ]
}
